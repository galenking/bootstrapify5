<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">{{ shop.name }}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
        {%- for link in menus.main-menu.links -%}
        {%- if link.levels == 0 -%}
        <li class="nav-item">
          <a class="nav-link{% if link.active %} active{% endif %}"{% if link.active %}  aria-current="{{ link.type }}"{% endif %} href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a>
        </li>
        {%- else -%}
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle{% if link.active or link.child_active %} active{% endif %}" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
            {{ link.title }}
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            {%- for child_link in link.links -%}
            <li><a class="dropdown-item{% if child_link.active %} active{% endif %}" href="{{ child_link.url }}">{{ child_link.title }}</a></li>
            {%- endfor -%}
          </ul>
        </li>
        {%- endif -%}
        {%- endfor -%}
      </ul>
      <form class="d-flex" action="/search">
        <input name="q" class="form-control" type="search" placeholder="Search" aria-label="Search" value="{{ search.terms }}">
      </form>
      <ul class="d-flex navbar-nav">
        <li class="nav-item"><a href="#" class="nav-link"><i data-feather="search"></i></a></li>
        <li class="nav-item"><a href="#" class="nav-link"><i data-feather="user"></i></a></li>
        <li class="nav-item"><a href="#" class="nav-link"><i data-feather="shopping-bag"></i></a></li>
      </ul>
    </div>
  </div>
</nav>

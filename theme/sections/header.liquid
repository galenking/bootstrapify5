<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="/">{{ shop.name }}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
        {%- assign menu = linklists['main-menu'] -%}
        {%- for link in menu.links -%}
        {%- if link.links.size == 0 -%}
        <li class="nav-item">
          <a class="nav-link{% if link.active or link.child_active %} active{% endif %}" aria-current="page" href="{{ link.url }}">{{ link.title }}</a>
        </li>
        {%- else -%}
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle{% if link.active or link.child_active %} active{% endif %}" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
            {{ link.title }}
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            {%- for child_link in link.links -%}
            <li><a class="dropdown-item{% if link.active or link.child_active %} active{% endif %}" href="{{ child_link.url }}">{{ child_link.title }}</a></li>
            {%- endfor -%}
          </ul>
        </li>
        {%- endif -%}
        {%- endfor -%}
      </ul>
      <form class="d-flex">
        <input class="form-control mr-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>
